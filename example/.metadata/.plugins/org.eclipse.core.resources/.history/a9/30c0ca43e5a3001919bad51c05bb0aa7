<script th:inline="javascript">
	$().ready(function() {
		$('#submitDiv input').click(function() {
			encryptUsername([[${usernameKey}]])
		});
	});
	
	function encryptUsername(key) {
		var encrypt = new JSEncrypt();
		encrypt.setPublicKey(key);
		// 加密
		console.log($('#usernameDiv input').text());
		var v_str = encrypt.encrypt($('#usernameDiv input').text); //需要加密的内容
		console.log(v_str); 
	}
</script>
