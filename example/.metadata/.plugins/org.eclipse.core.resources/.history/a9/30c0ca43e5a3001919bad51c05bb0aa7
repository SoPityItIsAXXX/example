<body>
	<input type="hidden" th:value="${usernameKey}">
	<input type="hidden" th:value="${passwordKey}">
	<div id="boxDiv">
		<div id="usernameDiv">
			<p><b>用户名</b></p>
			<input th:type="text" th:placeholder="请输入手机号">
		</div>
		<div id="pwdDiv">
